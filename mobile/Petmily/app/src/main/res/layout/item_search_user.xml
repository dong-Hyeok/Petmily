<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_profile_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/iv_pet_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_cardview_grey_shape" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하동혁"
        style="@style/GreyBoldText"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/iv_profile_img"
        app:layout_constraintTop_toTopOf="@+id/iv_profile_img"
        />

    <TextView
        android:id="@+id/tv_pets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="망고, 사과, 뽀삐"
        style="@style/GreyLightText"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        />

</androidx.constraintlayout.widget.ConstraintLayout>