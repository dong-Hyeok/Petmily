<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_walk_pet_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="40dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_mypage_user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_default_dog"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_walk_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="초롱이"
        style="@style/BlackMediumText"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_walk_pet_img"
        />

    <TextView
        android:id="@+id/tv_walk_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1000m"
        style="@style/BlackMediumText"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_walk_separator"
        />

    <TextView
        android:id="@+id/tv_walk_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/walk_separator"
        style="@style/BlackMediumText"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_walk_time"
        />

    <TextView
        android:id="@+id/tv_walk_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="22분"
        style="@style/BlackMediumText"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>