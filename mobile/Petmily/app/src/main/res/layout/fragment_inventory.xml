<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.store.InventoryFragment">

        <LinearLayout
            android:id="@+id/ll_btn_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>

                <ToggleButton
                    android:id="@+id/btn_all"
                    style="@style/Curation_more_btn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/inventory_btn_selector"
                    android:textOff="@string/inventory_item_all"
                    android:textOn="@string/inventory_item_all"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_name" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <ToggleButton
                    android:id="@+id/btn_ring"
                    style="@style/Curation_more_btn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/inventory_btn_selector"
                    android:textOff="@string/inventory_item_ring"
                    android:textOn="@string/inventory_item_ring"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_name" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <ToggleButton
                    android:id="@+id/btn_badge"
                    style="@style/Curation_more_btn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/inventory_btn_selector"
                    android:textOff="@string/inventory_item_badge"
                    android:textOn="@string/inventory_item_badge"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_name" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <ToggleButton
                    android:id="@+id/btn_cover"
                    style="@style/Curation_more_btn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/inventory_btn_selector"
                    android:textOff="@string/inventory_item_cover"
                    android:textOn="@string/inventory_item_cover"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_name" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_btn_group"
            app:layout_constraintVertical_bias="0.025" />

</androidx.constraintlayout.widget.ConstraintLayout>