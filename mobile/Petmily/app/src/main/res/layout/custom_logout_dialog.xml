<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_round_fill"
    android:padding="30dp">

    <TextView
        android:id="@+id/tv_logout_header"
        style="@style/BlackBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_dialog_tv_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/tv_logout_header"
        app:layout_constraintStart_toStartOf="@+id/tv_logout_header"
        app:layout_constraintTop_toBottomOf="@+id/tv_logout_header">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout_ok"
            style="@style/WhiteBoldText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/custom_round_fill"
            android:backgroundTint="@color/main_color"
            android:gravity="center"
            android:text="@string/logout_dialog_btn_ok" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout_cancle"
            style="@style/BlackBoldText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/custom_round_stroke"
            android:gravity="center"
            android:text="@string/logout_dialog_btn_cancle" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


