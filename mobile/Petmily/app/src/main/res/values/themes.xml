<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Petmily" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.Petmily" parent="Base.Theme.Petmily">
        <item name="android:statusBarColor">@color/main_color</item>
        <item name="snackbarStyle">@color/main_color</item>


    </style>

    <style name="Theme.Petmily.Splash" parent="Theme.SplashScreen">
